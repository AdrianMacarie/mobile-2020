<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="274dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="369dp"
        android:text="@string/app_title"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtresult"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRules"
        android:layout_width="257dp"
        android:layout_height="126dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="486dp"
        android:text="@string/app_rules"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/numberOFpoints"
        android:layout_width="105dp"
        android:layout_height="36dp"
        android:layout_marginTop="365dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_marginBottom="85dp"
        android:text="@string/points"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRules"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonL"
        android:layout_width="96dp"
        android:layout_height="57dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="73dp"
        android:layout_marginBottom="244dp"
        android:onClick="onClick"
        android:text="@string/buttonL"
        app:layout_constraintBottom_toTopOf="@+id/numberOFpoints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRules" />

    <Button
        android:id="@+id/buttonR"
        android:layout_width="97dp"
        android:layout_height="59dp"
        android:layout_marginTop="73dp"
        android:layout_marginEnd="88dp"
        android:layout_marginRight="88dp"
        android:layout_marginBottom="240dp"
        android:onClick="onClick"
        android:text="@string/buttonR"
        app:layout_constraintBottom_toTopOf="@+id/numberOFpoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textRules"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/txtresult"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_marginBottom="257dp"
        android:textColor="@android:color/holo_green_light"
        android:textSize="24sp"
        android:textStyle="italic"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:text="@string/txtresult" />

</androidx.constraintlayout.widget.ConstraintLayout>